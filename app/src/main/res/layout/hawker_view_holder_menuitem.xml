<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/stone">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1"
        app:cardBackgroundColor="@color/light_cyan"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/MenuItemItemNameTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="100"
                    android:padding="8dp"
                    android:text="Name"
                    android:textColor="@color/dark_turquoise"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/MenuItemDescriptionTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="100"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="Description"
                    android:textColor="@color/dark_cyan" />

                <TextView
                    android:id="@+id/MenuItemPriceTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="8dp"
                    android:paddingLeft="8dp"
                    android:text="Price"
                    android:textColor="@color/dark_cyan" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/MenuItemImageView"
                    android:layout_width="match_parent"
                    android:layout_height="126dp"
                    android:layout_margin="5dp"
                    android:layout_weight="1"
                    android:fadingEdge="horizontal|vertical"
                    android:fadingEdgeLength="5dp"
                    app:srcCompat="@android:drawable/sym_def_app_icon" />
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
