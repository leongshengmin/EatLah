<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/hc_view_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="@color/light_sand"
        app:cardCornerRadius="4dp"
        app:contentPadding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/orderName_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="100"
                    android:padding="5dp"
                    android:text="Name"
                    android:textColor="@color/dark_sand"
                    android:textColorLink="@color/dark_sand"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/orderTime_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:padding="5dp"
                    android:textColor="@color/dark_sand"
                    android:textColorLink="@color/dark_sand" />
            </LinearLayout>

            <ImageView
                android:id="@+id/hcImage"
                android:layout_width="168dp"
                android:layout_height="126dp"
                android:layout_weight="1"
                android:padding="10dp" />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
