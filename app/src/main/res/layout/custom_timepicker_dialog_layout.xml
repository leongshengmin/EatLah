<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_dialog_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:layout_editor_absoluteY="81dp">

    <TimePicker
        android:id="@+id/collectionTime_timePicker"
        android:layout_width="336dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toTopOf="@+id/submit_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deliveryOptions_spinner" />

    <Spinner
        android:id="@+id/deliveryOptions_spinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="21dp"
        android:layout_marginEnd="19dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="19dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="18dp"
        android:entries="@array/deliveryOptions"
        app:layout_constraintBottom_toTopOf="@+id/collectionTime_timePicker"
        app:layout_constraintEnd_toEndOf="@+id/collectionTime_timePicker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/submit_button"
        android:layout_width="147dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="98dp"
        android:layout_marginLeft="101dp"
        android:layout_marginRight="98dp"
        android:layout_marginStart="101dp"
        android:background="?android:attr/colorAccent"
        android:text="@string/order_submit_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/collectionTime_timePicker"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/collectionTime_timePicker" />

</android.support.constraint.ConstraintLayout>