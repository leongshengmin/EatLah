<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/accepted_fooditem_view_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="230dp">

            <ImageView
                android:id="@+id/accepted_foodItem_image"
                android:layout_width="205dp"
                android:layout_height="128dp"
                android:layout_marginBottom="12dp"
                android:layout_marginEnd="6dp"
                android:layout_marginRight="6dp"
                android:layout_marginTop="11dp"
                app:layout_constraintBottom_toTopOf="@+id/accepted_price_textView"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/accepted_foodItemDesc_textView"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/accepted_foodItemName_textView"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginBottom="26dp"
                android:layout_marginLeft="16dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="21dp"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name"
                app:layout_constraintBottom_toTopOf="@+id/accepted_foodItemDesc_textView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/accepted_foodItemDesc_textView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="116dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="116dp"
                android:layout_marginStart="16dp"
                android:ems="10"
                android:inputType="textPostalAddress"
                android:text="Desc"
                app:layout_constraintBottom_toTopOf="@+id/accepted_orderqty_textView"
                app:layout_constraintEnd_toStartOf="@+id/accepted_price_textView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/accepted_foodItemName_textView" />

            <TextView
                android:id="@+id/accepted_price_textView"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginBottom="47dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="Price'"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/accepted_orderqty_textView"
                app:layout_constraintTop_toBottomOf="@+id/accepted_foodItem_image" />

            <TextView
                android:id="@+id/accepted_orderqty_textView"
                android:layout_width="92dp"
                android:layout_height="0dp"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="39dp"
                android:layout_marginLeft="120dp"
                android:layout_marginRight="39dp"
                android:layout_marginStart="120dp"
                android:ems="10"
                android:text="Qty"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/accepted_price_textView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/accepted_foodItemDesc_textView" />

        </android.support.constraint.ConstraintLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>